{
    "manifest_version": 2,
    "name": "faster-vid",
    "version": "1.0",
    "description": "Makes the currently playing video play at 1.5x speed",
    "icons": {
        "48": "icon-48.png"
    },
    "permissions" : ["activeTab"],
    "content_scripts": [ 
        {
            "matches" : ["*://*.mozilla.org/*"],
            "js": ["faster-vid.js"]
        }
    ],
    "background" : {
        "scripts" : ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "48" : "icon-48.png"
        },
        "default_title": "Faster vid"
    }
}